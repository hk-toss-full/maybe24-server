extend type Query {
    getDiscountById(id: ID!): Discount
    getAllDiscounts: [Discount]
}

extend type Mutation {
    createDiscount(discountInput: DiscountInput): Discount
    updateDiscount(id: ID!, discountInput: DiscountInput): Discount
    deleteDiscount(id: ID!): Boolean
}

type Discount {
    discountId: ID
    discountType: String
    discountRate: Int
    product: Product
}

input DiscountInput {
    discountType: String
    discountRate: Int
    productId: ID!
}
